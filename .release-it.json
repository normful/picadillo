{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "commitMessage": "chore: release ${version}"
  },
  "hooks": {
    "after:bump": "./generate-changelog.sh"
  },
  "github": {
    "release": true,
    "releaseNotes": "./generate-changelog.sh stdout"
  },
  "npm": {
    "publish": true
  }
}
